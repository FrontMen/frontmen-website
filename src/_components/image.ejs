<figure class="c-image">
    <picture>
        <source srcset="<%= image %>" media="(min-width: 2000px)">
        <source srcset="<%= image.split('.').join('@xl.') %>" media="(min-width: 1400px)">
        <source srcset="<%= image.split('.').join('@lg.') %>" media="(min-width: 1024px)">
        <source srcset="<%= image.split('.').join('@md.') %>" media="(min-width: 720px)">
        <source srcset="<%= image.split('.').join('@sm.') %>" media="(min-width: 480px)">
        <img class="c-image__img" srcset="<%= image.split('.').join('@xs.') %>" alt="<%= title %>" />
    </picture>
</figure>
